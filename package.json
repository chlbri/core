{
  "name": "@bemedev/core",
  "version": "0.1.7",
  "description": "The core library of @bemedev",
  "author": {
    "email": "bri_lvi@icloud.com",
    "name": "chlbri",
    "url": "https://bemedev.vercel.app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chlbri/core.git"
  },
  "bin": "lib/scripts/cli/index.js",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "lib/index.js",
  "maintainers": [
    {
      "email": "bri_lvi@icloud.com",
      "name": "chlbri",
      "url": "https://bemedev.vercel.app"
    }
  ],
  "contributors": [
    {
      "email": "bri_lvi@icloud.com",
      "name": "chlbri",
      "url": "https://bemedev.vercel.app"
    }
  ],
  "keywords": [
    "core",
    "bemedev",
    "@bemedev",
    "cli"
  ],
  "files": [
    "lib",
    "public",
    "README.md",
    "LICENSE",
    "CHANGE_LOG.md",
    "CONTRIBUTING.md"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "pnpm rm:lib && pnpm run rollup && pnpm run codegen",
    "ci": "pnpm run config:off && pnpm run lint && pnpm run test && pnpm run p-q",
    "ci:admin": "pnpm run rm && pnpm --prefix ./example run rm && pnpm run upgrade && pnpm --prefix ./example run upgrade && pnpm run ci",
    "clean": "pnpm run rm && pnpm run config",
    "codegen": "pnpm codebase -x \"src/**/*.test-d.ts\"",
    "config": "pnpm install",
    "config:off": "pnpm run config --offline",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx}\"",
    "lint": "pnpm run prettier && pnpm run eslint --fix",
    "lint:watch": "onchange --await-write-finish 5500 \"**/*\" -- pnpm run lint",
    "prepublishOnly": "",
    "prepare": "husky",
    "pretest": "pnpm run build",
    "posttest": "pnpm run test:cli && pnpm run size && pnpm run lint",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "p-q": "pretty-quick",
    "rinit": "pnpm run rm && pnpm run config",
    "rinit:off": "pnpm run rm && pnpm run config:off",
    "rimraf": "pnpm dlx rimraf -rf",
    "rm": "pnpm run rimraf -- node_modules pnpm-lock.yaml",
    "rm:lib": "pnpm run rimraf -- lib",
    "rollup": "rollup -c",
    "size": "size-limit",
    "test": "pnpm run test:coverage --no-coverage",
    "test:cli": "pnpm --prefix ./example run test",
    "test:only": "pnpm run test:coverage --no-coverage",
    "test:coverage": "vitest run",
    "test:watch": "vitest",
    "upgrade": "pnpm up --latest && pnpm add -D @vitest/coverage-v8@3.2.4 vitest@3.2.4",
    "manifest": "tsx src/scripts/manifest/generate.ts",
    "help": "pnpm core -h"
  },
  "size-limit": [
    {
      "path": "lib/*.js",
      "limit": "10 KB"
    },
    {
      "path": "lib/*.cjs",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@bemedev/build-tests": "^0.1.2",
    "@bemedev/fsf": "^1.0.1",
    "@bemedev/rollup-config": "^0.2.2",
    "@bemedev/vitest-alias": "^0.0.3",
    "@bemedev/vitest-exclude": "^0.1.1",
    "@bemedev/vitest-extended": "^1.5.3",
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.2",
    "@rollup/plugin-json": "^6.1.0",
    "@size-limit/file": "^12.0.0",
    "@types/edit-json-file": "1.7.4",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "8.50.1",
    "@typescript-eslint/parser": "8.50.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "9.39.2",
    "glob": "^13.0.0",
    "globals": "16.5.0",
    "husky": "^9.1.7",
    "onchange": "^7.1.0",
    "prettier": "3.7.4",
    "pretty-quick": "^4.2.2",
    "rollup": "4.54.0",
    "size-limit": "^12.0.0",
    "tslib": "^2.8.1",
    "tsx": "4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "dependencies": {
    "@bemedev/codebase": "^0.1.3",
    "chokidar": "^5.0.0",
    "cmd-ts": "0.14.3",
    "edit-json-file": "^1.8.1",
    "ts-morph": "27.0.2",
    "valibot": "1.2.0"
  }
}
